while True:
    try:
        age = int(input("Please enter your age in years: "))
        if age <= 0 or age >= 135:
            print("Invalid age. Please enter a positive number less than 135.")
        else:
            break
    except ValueError:
        print("Invalid input. Please enter a whole number.")

max_heart_rate = 220 - age

moderate_intensity_min = max_heart_rate * 0.50
moderate_intensity_max = max_heart_rate * 0.70

vigorous_activity_min = max_heart_rate * 0.70
vigorous_activity_max = max_heart_rate * 0.85

print("-----Target Heart-Rate Calculator Based On Your Age-----")
print(f"Your Age = {age} years,")
print(f"Maximum heart rate for your age in bpm = {max_heart_rate} bpm")
print(f"Target Heart Rate for moderate-intensity activity = {moderate_intensity_min:.1f} to {moderate_intensity_max:.1f} bpm")
print(f"Target Heart Rate for vigorous activity = {vigorous_activity_min:.1f} to {vigorous_activity_max:.1f} bpm")
print("---------------------------")
